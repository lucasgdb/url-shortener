{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["airbnb", "prettier/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "simple-import-sort", "import"],
	"rules": {
		"simple-import-sort/sort": "error"
	}
}
